# Commands:
# play [game] - play a game
# list - list installed games
# install [game] - install a game
# update [game] - update game
# search [keyword] - search for games

require "gamefic"
require "gamefic/base"
include Gamefic

story = Story.new
story.require_script "#{ARGV[0]}"
engine = Engine.new story
engine.run
